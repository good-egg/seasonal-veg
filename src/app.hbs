<div id="wrapper" role="main">
	<div class="seasonal-veg--container">
		<h1>Seasonal Produce</h1>
		<div class="user-input-container">
			{{> dropdowns}}
		</div>
		<div class="results-container" style="display: none;">
			{{> results}}
			<hr />
			<h2>Recipes</h2>
			<div class="dropdown-container dropdown-container--diet">
				<label for="food-select" class="offscreen">Select your diet</label>
				<select name="food" id="food-select">
					<option value="all">All diets</option>
					<option value="veg">Vegetarian</option>
				</select>
			</div>
			<div class="recipes-container">
				{{>recipes}}
			</div>
		</div>
	</div>
</div>

